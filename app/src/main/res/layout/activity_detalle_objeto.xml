<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetalleObjeto">

    <EditText
        android:id="@+id/id_Todo2"
        android:layout_width="334dp"
        android:layout_height="127dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="To Do"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_fecha2"
        android:layout_width="334dp"
        android:layout_height="101dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:hint="Date"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_Todo2" />

    <CheckBox
        android:id="@+id/idComplete2"
        android:layout_width="336dp"
        android:layout_height="76dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="16dp"
        android:checked="false"
        android:gravity="center"
        android:text="Complete"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_fecha2" />

    <Button
        android:id="@+id/idActualizarDetalle"
        android:layout_width="146dp"
        android:layout_height="71dp"
        android:layout_marginStart="36dp"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="132dp"
        android:background="@android:color/holo_green_light"
        android:gravity="center"
        android:text="Actualizar"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idComplete2"
        android:onClick="onClick"/>

    <Button
        android:id="@+id/idEliminardetalle"
        android:layout_width="146dp"
        android:layout_height="71dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="132dp"
        android:background="@android:color/holo_red_dark"
        android:gravity="center"
        android:text="Eliminar"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/idActualizarDetalle"
        app:layout_constraintTop_toBottomOf="@+id/idComplete2"
        android:onClick="onClick"/>

</androidx.constraintlayout.widget.ConstraintLayout>